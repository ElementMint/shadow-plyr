{
    "compilerOptions": {
      "target": "ES2019",
      "module": "ESNext",
      "lib": ["DOM", "ESNext"],
      "declaration": true,
      "declarationDir": "./dist/types",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "removeComments": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }